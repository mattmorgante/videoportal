<p id="notice"><%= notice %></p>


  <div class="table-responsive">
    <table class="table">
      <tbody>
        <tr>
          <td><strong>Title:</strong></td>
          <td><a href= <%= @video.link %> ><%= @video.name%></a></td>
        </tr>
        <tr>
          <td><strong>Image:</strong></td>
          <td><%= image_tag @video.image.url(:medium) %></td>
        </tr>    
      </tbody>
    </table>
  </div>

  <% if @reviews.blank? %> 
    <%= link_to "Write the first review!", new_place_review_path(@place), class: "btn btn-danger" %>
  <% else %> 

  <% @reviews.each do |r| %> 
    <div class="reviews">
      <div class="star-rating" data-score= <%= r.rating %> ></div>
      <p><%= r.comment %></p>
    </div>
  <% end %>


<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>

<script> 
  $('.star-rating').raty({ 
    path: '/assets/',
    readOnly: true, 
    score: function () { 
      return $(this).attr('data-score');
    }

  });

</script> 